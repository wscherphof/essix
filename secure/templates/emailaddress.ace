= doctype html
html lang={{ .lang.Main }}
  = include ../../templates/includes/head .
  body
    h2 {{ Msg "Change email address" }}
    p {{ Msg "Want replace" }} "{{ .Account.UID }}" {{ Msg "Replace with" }} "{{ .Account.NewUID }}"
    form method=POST action=/account/emailaddress
      input type=hidden name=_method value=PUT
      input type=hidden name=code value={{ .Account.EmailAddressCode }}
      input type=submit value={{ Msg "Confirm" }}
