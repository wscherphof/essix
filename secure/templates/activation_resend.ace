= doctype html
html lang={{ .lang.Main }}
  = include ../../templates/includes/head .
  body
    h2 {{ Msg "Resend activation code" }}
    form method=POST action=/account/activationcode
      p
        label {{ Msg "Email" }}*{{ " " }}
          input id=uid type=email name=uid value={{ .UID }} placeholder=email@provider.com required= size=35
      p
        = include includes/captcha .
      p
        input type=submit
