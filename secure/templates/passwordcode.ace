= doctype html
html lang={{ .lang.Main }}
  = include ../../templates/includes/head .
  body
    h2 {{ Msg "password subject" }}
    form method=POST action=/account/passwordcode
      p
        label {{ Msg "Email" }}*{{ " " }}
          input id=uid type=email name=uid autocomplete=username value={{ .UID }} placeholder=email@provider.com required= size=35
      p
        = include includes/captcha .
      p
        input type=submit
