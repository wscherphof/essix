= doctype html
html lang={{ .lang.Main }}
  = include ../../templates/includes/head .
  body
    header
      h1 {{ Msg "password subject" }}
    main.flex
      form method=POST action=/account/passwordcode
        .p
          label {{ Msg "Email" }}*
            input#uid.right type=email name=uid autocomplete=username value={{ .UID }} placeholder=email@provider.com required=
        .p
          = include includes/captcha .
        .p &nbsp;
          input.right type=submit
