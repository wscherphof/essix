= doctype html
html lang={{ .lang.Main }}
  = include ../../templates/includes/head .
  body
    h2 {{ Msg "emailaddress subject" }}
    form method=POST action=/account/emailaddresscode
      p
        label {{ Msg "Current" }}: {{ .UID }}
      p
        label {{ Msg "New" }}*{{ " " }}
          input id=newuid type=email name=newuid placeholder=email@provider.com required= size=35
      p
        input type=submit
