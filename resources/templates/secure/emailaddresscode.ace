= include ../../templates/includes/top .
body
  header
    h1 {{ Msg .lang "emailaddress subject" }}
  main.flex
    form method=POST action=/account/emailaddresscode
      .p
        label {{ Msg .lang "Current" }}:
          span.right {{ .UID }}
      .p
        label {{ Msg .lang "New" }}*
          input#newuid.right type=email name=newuid autocomplete=username placeholder=email@provider.com required=
      .p
        input.right type=submit
