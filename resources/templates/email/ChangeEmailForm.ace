= include ../includes/top .
body
  header
    h1 {{Msg .r "Change email address"}}
  main.wrap
    .p {{Msg .r "Want replace"}} "{{.email}}" {{Msg .r "Replace with"}} "{{.newemail}}"
    form.flex method=POST action=/account/email
      input type=hidden name=_method value=PUT
      input type=hidden name=token value={{.emailtoken}}
      input type=submit value={{Msg .r "Confirm"}}
